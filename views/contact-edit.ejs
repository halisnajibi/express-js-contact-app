<div class="row mx-auto">
    <div class="col-md">
      <a href="/" class="btn btn-secondary mb-2">Return</a>
      <form action="/contact?_method=put" method="post">
        <input type="hidden" name="id" value="<%= contact._id %>">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            name="email" value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="noHP" class="form-label">No HP</label>
          <input type="number" class="form-control" id="noHP" name="noHP" value="<%= contact.noHP %>" />
        </div>
        <button type="submit" class="btn btn-success">Update</button>
      </form>
    </div>
  </div>