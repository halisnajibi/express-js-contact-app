<div class="row mx-auto mt-5">
  <div class="col-md">
    <a href="/contact" class="btn btn-primary mb-2">Add Contact</a>
    <table class="table table-striped table-hover" id="table">
      <thead>
        <th>No</th>
        <th>Nama</th>
        <th>Email</th>
        <th>No HP</th>
        <th>Aksi</th>
      </thead>
      <tbody>
        <% contacts.forEach((contact,i) => { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= contact.nama %></td>
          <td><%= contact.email %></td>
          <td><%= contact.noHP %></td>
          <td>
            <a href="/contact/<%= contact.id %>" class="badge rounded-pill text-bg-warning">Edit</a>
            <form action="/contact?_method=delete" method="post" class="d-inline">
              <input type="hidden" name="id" value="<%= contact.id %>" />
              <button
                type="submit"
                name=""
                class="badge rounded-pill text-bg-danger"
                onclick="return confirm('yakin')"
              >
                delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
